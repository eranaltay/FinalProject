<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

    	
      		<ImageView
      	    android:id="@+id/alarmimg"
    	    android:layout_width="20dp"
      	    android:layout_height="20dp"
      	    android:layout_marginTop="40dp"
       	    android:layout_marginLeft="3dp"
      	    android:src="@android:color/transparent" />
      			
      	<TextView
      	    android:id="@+id/itemoflist"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_centerVertical="true"
      	    android:layout_toRightOf="@+id/importanceleft"
      	    android:hapticFeedbackEnabled="true"
      	    android:typeface="monospace"
      	    android:paddingBottom="12dip"
      	    android:paddingTop="12dip"
      	    android:singleLine="true"
      	    android:shadowRadius="2"
      	    android:shadowColor="#000000"
      	    android:textColor="#E0EAF8"
      	    android:textSize="30sp"
      	    android:textStyle="bold" />

      	<ImageView
      	    android:id="@+id/importanceleft"
      	    android:clickable="true"
      	    android:layout_width="25dp"
      	    android:layout_height="25dp"
      	    android:layout_alignParentLeft="true"
      	    android:layout_alignParentTop="true"
      	    android:src="@android:color/transparent" />

      	<ImageView
      	    android:id="@+id/repeatindicator"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_alignBottom="@+id/importanceleft"
      	    android:layout_alignParentRight="true"
      	    android:src="@android:color/transparent" />

      	      	      	
  		<ImageView
      	    android:id="@+id/proximityimg"
      	    android:layout_width="wrap_content"
      	    android:layout_height="20dp"   	    
      	    android:layout_marginLeft="30dp"
      	    android:src="@android:color/transparent" />
      	
      	
</RelativeLayout>